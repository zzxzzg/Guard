            android:name="com.haarman.listviewanimations.gridview.GridViewActivity"
            android:label="@string/gridviewexample" />
        <activity
            android:name="com.haarman.listviewanimations.itemmanipulation.expandablelistitems.ExpandableListItemActivity"
            android:label="@string/expandablelistitemadapter" />
